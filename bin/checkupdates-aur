#!/usr/bin/perl
use v5.16;
use strict;
use warnings;
no warnings 'experimental::smartmatch';

use OS::CheckUpdates::AUR;
use Try::Tiny;

=head1 NAME

checkupdates-aur - checkupdates for packages installed from AUR

=head1 VERSION

Version 0.05

=cut

my $cua = OS::CheckUpdates::AUR->new;


=head1 SYNOPSIS

Prints updates for packages installed from AUR (in checkupdates format)...

Hint: Should be useful in "ArchLinux Updates Indicator" addon for Gnome-Shell.

=cut

=head1 USAGE

To check updates:

    checkupdates-aur

To show orphans on STDERR:

    checkupdates-aur --orphans

Or if you have local repo with packages from AUR:

    pacman -Sl my_own_repo | awk '{print $2" "$3}' | checkupdates-aur -

    Note: `pacman -Qm | checkupdates-aur -` is equal to: `checkupdates-aur`

To run in debug mode:

    CHECKUPDATES_DEBUG=1 checkupdates-aur

Debug mode require Smart::Comments

=cut

my %list;

if ('-h' ~~ @ARGV or '--help' ~~ @ARGV) {
    say usage();
    exit 0;
} elsif ('-' ~~ @ARGV) {
    %list = read_from_stdin();
}

try {
    $cua->refresh(%list)->print();

    if ('-o' ~~ @ARGV or '--orphans' ~~ @ARGV) {
        say STDERR ":: Orphan: ".$_ foreach $cua->orphans();
    };

} catch {
    $ENV{CHECKUPDATES_DEBUG}
        and print STDERR $_;

    exit $!;
};

sub read_from_stdin {
    my $re = qr{
        ([a-z0-9_.@\+-]+) # get package name
        \s                # separator
        ([a-z0-9_.@\+-]+) # get package version
    }ixas;
    # i - case-insensitive
    # x - extended regular expressions
    # a - ASCII-restrict
    # s - treat as single line

    map { if (/$re/o) { $1 => $2 } else { () } } <STDIN>;
}

sub usage {
    <<'EOF';
USAGE:
    checkupdates-aur (-h|--help)
    checkupdates-aur (-o|--orphans|-)

OPTIONS:
    -o, --orphans
        Show packages that can't be found
        on AUR.

    -
        You can sepcify packages to check.
        $ checkupdates-aur   #is equal to:
        $ pacman -Qm | checkupdates-aur -

MORE INFO:
    See man page...
EOF
}

